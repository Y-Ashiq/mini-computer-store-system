<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxmlapp.FXMLDocumentController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="320.0" spacing="8.0" style="-fx-background-color: #202F3D;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Sign In" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Arial Black" size="20.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Label>
            <TextField fx:id="usernameField" maxWidth="400.0" promptText="Username" style="-fx-background-color: #4D5862; -fx-background-color: #FFFFFF;">
               <VBox.margin>
                  <Insets left="40.0" right="40.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="passwordField" maxWidth="400.0" promptText="Password" style="-fx-background-color: #4D5862; -fx-font: #FFFFFF; -fx-background-color: #FFFFFF;">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets left="40.0" right="40.0" />
               </VBox.margin>
            </PasswordField>
            <Button fx:id="signIn" maxWidth="100.0" mnemonicParsing="false" onAction="#handleButtonAction" text="Sign In" textAlignment="CENTER">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <Label text="OR" textFill="WHITE" />
            <Button fx:id="signup" maxWidth="100.0" mnemonicParsing="false" onAction="#SignupWindow" prefHeight="25.0" prefWidth="67.0" text="Sign up" textAlignment="CENTER" />
            <Label fx:id="warningText" textFill="RED" />
         </children>
      </VBox>
   </children>
</AnchorPane>
